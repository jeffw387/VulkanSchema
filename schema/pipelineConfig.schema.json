{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "id": "https://gitcdn.xyz/repo/jeffw387/VulkanSchema/master/schema/pipelineConfig.schema.json",
    "type": "object",
    "properties": {
        "uri": {
            "$ref": "uri.schema.json"
        },
        "shaderStageConfigs": {
            "type": "array",
            "items": {
                "oneOf": [
                    {
                        "$ref": "shaderStageConfig.schema.json"
                    },
                    {
                        "$ref": "uri.schema.json"
                    }
                ]
            }
        },
        "vertexInputConfig": {
            "oneOf": [
                {
                    "$ref": "vertexInputConfig.schema.json"
                },
                {
                    "$ref": "uri.schema.json"
                }
            ]
        },
        "inputAssemblyConfig": {
            "oneOf": [
                {
                    "$ref": "inputAssemblyConfig.schema.json"
                },
                {
                    "$ref": "uri.schema.json"
                }
            ]
        },
        "tesselationConfig": {
            "oneOf": [
                {
                    "$ref": "tesselationConfig.schema.json"
                },
                {
                    "$ref": "uri.schema.json"
                }
            ]
        },
        "viewportConfig": {
            "oneOf": [
                {
                    "$ref": "viewportConfig.schema.json"
                },
                {
                    "$ref": "uri.schema.json"
                }
            ]
        },
        "rasterizationConfig": {
            "oneOf": [
                {
                    "$ref": "rasterizationConfig.schema.json"
                },
                {
                    "$ref": "uri.schema.json"
                }
            ]
        },
        "multisampleConfig": {
            "oneOf": [
                {
                    "$ref": "multisampleConfig.schema.json"
                },
                {
                    "$ref": "uri.schema.json"
                }
            ]
        },
        "depthStencilConfig": {
            "oneOf": [
                {
                    "$ref": "depthStencilConfig.schema.json"
                },
                {
                    "$ref": "uri.schema.json"
                }
            ]
        },
        "colorBlendConfig": {
            "oneOf":[
                {
                    "$ref": "colorBlendConfig.schema.json"
                },
                {
                    "$ref": "uri.schema.json"
                }
            ]
        }
    },
    "required": [
        "uri",
        "shaderStageConfigs",
        "vertexInputConfig",
        "inputAssemblyConfig",
        "viewportConfig",
        "rasterizationConfig",
        "depthStencilConfig"
    ]
}