{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "id": "https://gitcdn.xyz/repo/jeffw387/VulkanSchema/master/schema/pipelineConfig.schema.json",
    "type": "object",
    "definitions": {
        "dynamicState": {
            "type": "string",
            "enum": [
                "VK_DYNAMIC_STATE_VIEWPORT",
                "VK_DYNAMIC_STATE_SCISSOR",
                "VK_DYNAMIC_STATE_LINE_WIDTH",
                "VK_DYNAMIC_STATE_DEPTH_BIAS",
                "VK_DYNAMIC_STATE_BLEND_CONSTANTS",
                "VK_DYNAMIC_STATE_DEPTH_BOUNDS",
                "VK_DYNAMIC_STATE_STENCIL_COMPARE_MASK",
                "VK_DYNAMIC_STATE_STENCIL_WRITE_MASK",
                "VK_DYNAMIC_STATE_STENCIL_REFERENCE",
                "VK_DYNAMIC_STATE_VIEWPORT_W_SCALING_NV",
                "VK_DYNAMIC_STATE_DISCARD_RECTANGLE_EXT",
                "VK_DYNAMIC_STATE_SAMPLE_LOCATIONS_EXT"
            ]
        }
    },
    "properties": {
        "uri": {
            "$ref": "uri.schema.json"
        },
        "shaderStageConfigs": {
            "type": "array",
            "items": {
                "oneOf": [
                    {
                        "$ref": "shaderStageConfig.schema.json"
                    },
                    {
                        "$ref": "uri.schema.json"
                    }
                ]
            }
        },
        "vertexInputConfig": {
            "oneOf": [
                {
                    "$ref": "vertexInputConfig.schema.json"
                },
                {
                    "$ref": "uri.schema.json"
                }
            ]
        },
        "inputAssemblyConfig": {
            "oneOf": [
                {
                    "$ref": "inputAssemblyConfig.schema.json"
                },
                {
                    "$ref": "uri.schema.json"
                }
            ]
        },
        "tesselationConfig": {
            "oneOf": [
                {
                    "$ref": "tesselationConfig.schema.json"
                },
                {
                    "$ref": "uri.schema.json"
                }
            ]
        },
        "viewportConfig": {
            "oneOf": [
                {
                    "$ref": "viewportConfig.schema.json"
                },
                {
                    "$ref": "uri.schema.json"
                }
            ]
        },
        "rasterizationConfig": {
            "oneOf": [
                {
                    "$ref": "rasterizationConfig.schema.json"
                },
                {
                    "$ref": "uri.schema.json"
                }
            ]
        },
        "multisampleConfig": {
            "oneOf": [
                {
                    "$ref": "multisampleConfig.schema.json"
                },
                {
                    "$ref": "uri.schema.json"
                }
            ]
        },
        "depthStencilConfig": {
            "oneOf": [
                {
                    "$ref": "depthStencilConfig.schema.json"
                },
                {
                    "$ref": "uri.schema.json"
                }
            ]
        },
        "colorBlendConfig": {
            "oneOf": [
                {
                    "$ref": "colorBlendConfig.schema.json"
                },
                {
                    "$ref": "uri.schema.json"
                }
            ]
        },
        "dynamicStates": {
            "type": "array",
            "items": {
                "$ref": "#/definitions/dynamicState"
            }
        },
        "pipelineLayoutConfig": {
            "oneOf": [
                {
                    "$ref": "pipelineLayoutConfig.schema.json"
                },
                {
                    "$ref": "uri.schema.json"
                }
            ]
        }
    },
    "required": [
        "uri",
        "shaderStageConfigs",
        "vertexInputConfig",
        "inputAssemblyConfig",
        "viewportConfig",
        "rasterizationConfig",
        "depthStencilConfig",
        "colorBlendConfig",
        "dynamicStates",
        "pipelineLayoutConfig"
    ]
}