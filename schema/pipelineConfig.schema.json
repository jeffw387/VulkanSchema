{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "id": "https://github.com/jeffw387/VulkanSchema/blob/master/schema/pipelineConfig.schema.json",
    "type": "object",
    "properties": {
        "uri": {
            "$ref": "/uri.schema.json"
        },
        "shaderStageConfigs": {
            "type": "array",
            "items": {
                "oneOf": [
                    {
                        "$ref": "/shaderStageConfig.schema.json"
                    },
                    {
                        "$ref": "/uri.schema.json"
                    }
                ]
            }
        },
        "vertexInputConfig": {
            "oneOf": [
                {
                    "$ref": "/vertexInputConfig.schema.json"
                },
                {
                    "$ref": "/uri.schema.json"
                }
            ]
        },
        "inputAssemblyConfig": {
            "oneOf": [
                {
                    "$ref": "/inputAssemblyConfig.schema.json"
                },
                {
                    "$ref": "/uri.schema.json"
                }
            ]
        },
        "tesselationConfig": {
            "oneOf": [
                {
                    "$ref": "/tesselationConfig.schema.json"
                },
                {
                    "$ref": "/uri.schema.json"
                }
            ]
        },
        "viewportConfig": {
            "oneOf": [
                {
                    "$ref": "/viewportConfig.schema.json"
                },
                {
                    "$ref": "/uri.schema.json"
                }
            ]
        },
        "rasterizationConfig": {
            "oneOf": [
                {
                    "$ref": "/rasterizationConfig.schema.json"
                },
                {
                    "$ref": "/uri.schema.json"
                }
            ]
        },
        "multisamplingConfig": {
            "oneOf": [
                {
                    "$ref": "/multisamplingConfig.schema.json"
                },
                {
                    "$ref": "/uri.schema.json"
                }
            ]
        },
        "depthStencilConfig": {
            "oneOf": [
                {
                    "$ref": "/depthStencilConfig.schema.json"
                },
                {
                    "$ref": "/uri.schema.json"
                }
            ]
        }
    },
    "required": [
        "uri",
        "shaderStageConfigs",
        "vertexInputConfig",
        "inputAssemblyConfig",
        "tesselationConfig",
        "viewportConfig",
        "rasterizationConfig",
        "depthStencilConfig"
    ]
}