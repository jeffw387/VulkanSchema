{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "id": "https://github.com/jeffw387/VulkanSchema/blob/master/schema/pipelineConfig.schema.json",
    "type": "object",
    "properties": {
        "uri": {
            "$ref": "uri.schema.json"
        },
        "shaderStageConfigs": {
            "type": "array",
            "items": {
                "oneOf": [
                    {
                        "$ref": "shaderStageConfig.schema.json"
                    },
                    {
                        "$ref": "uri.schema.json"
                    }
                ]
            }
        },
        "vertexInputConfig": {
            "oneOf": [
                {
                    "$ref": "vertexInputConfig.schema.json"
                },
                {
                    "$ref": "uri.schema.json"
                }
            ]
        },
        "inputAssemblyConfig": {
            "oneOf": [
                {
                    "$ref": "inputAssemblyConfig.schema.json"
                },
                {
                    "$ref": "uri.schema.json"
                }
            ]
        }
    },
    "required": [
        "uri",
        "shaderStageConfigs",
        "vertexInputConfig",
        "inputAssemblyConfig"
    ]
}