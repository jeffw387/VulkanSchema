{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "id": "https://gitcdn.xyz/repo/jeffw387/VulkanSchema/master/schema/samplerConfig.schema.json",
    "type": "object",
    "definitions": {
        "filter": {
            "type": "string",
            "enum": [
                "VK_FILTER_NEAREST",
                "VK_FILTER_LINEAR",
                "VK_FILTER_CUBIC_IMG"
            ]
        },
        "samplerMipmapMode": {
            "type": "string",
            "enum": [
                "VK_SAMPLER_MIPMAP_MODE_NEAREST",
                "VK_SAMPLER_MIPMAP_MODE_LINEAR"
            ]
        },
        "samplerAddressMode": {
            "type": "string",
            "enum": [
                "VK_SAMPLER_ADDRESS_MODE_REPEAT",
                "VK_SAMPLER_ADDRESS_MODE_MIRRORED_REPEAT",
                "VK_SAMPLER_ADDRESS_MODE_CLAMP_TO_EDGE",
                "VK_SAMPLER_ADDRESS_MODE_CLAMP_TO_BORDER",
                "VK_SAMPLER_ADDRESS_MODE_MIRROR_CLAMP_TO_EDGE"
            ]
        },
        "borderColor": {
            "type": "string",
            "enum": [
                "VK_BORDER_COLOR_FLOAT_TRANSPARENT_BLACK",
                "VK_BORDER_COLOR_INT_TRANSPARENT_BLACK",
                "VK_BORDER_COLOR_FLOAT_OPAQUE_BLACK",
                "VK_BORDER_COLOR_INT_OPAQUE_BLACK",
                "VK_BORDER_COLOR_FLOAT_OPAQUE_WHITE",
                "VK_BORDER_COLOR_INT_OPAQUE_WHITE"
            ]
        }
    },
    "properties": {
        "magFilter": {
            "$ref": "#/definitions/filter"
        },
        "minFilter": {
            "$ref": "#/definitions/filter"
        },
        "mipmapMode": {
            "$ref": "#/definitions/samplerMipmapMode"
        },
        "addressModeU": {
            "$ref": "#/definitions/samplerAddressMode"
        },
        "addressModeV": {
            "$ref": "#/definitions/samplerAddressMode"
        },
        "addressModeW": {
            "$ref": "#/definitions/samplerAddressMode"
        },
        "mipLodBias": {
            "type": "number"
        },
        "anisotropyEnable": {
            "type": "boolean"
        },
        "maxAnisotropy": {
            "type": "number"
        },
        "compareEnable": {
            "type": "boolean"
        },
        "compareOp": {
            "$ref": "compareOp.schema.json"
        },
        "minLod": {
            "type": "number"
        },
        "maxLod": {
            "type": "number"
        },
        "borderColor": {
            "$ref": "#/definitions/borderColor"
        },
        "unnormalizedCoordinates": {
            "type": "boolean"
        }
    },
    "required":[
        "magFilter",
        "minFilter",
        "mipmapMode",
        "addressModeU",
        "addressModeV",
        "addressModeW",
        "mipLodBias",
        "anisotropyEnable",
        "maxAnisotropy",
        "compareEnable",
        "compareOp",
        "minLod",
        "maxLod",
        "borderColor",
        "unnormalizedCoordinates"
    ]
}