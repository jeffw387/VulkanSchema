{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "id": "https://gitcdn.xyz/repo/jeffw387/VulkanSchema/master/schema/rasterizationConfig.schema.json",
    "type": "object",
    "properties": {
        "uri": {
            "$ref": "uri.schema.json"
        },
        "depthClampEnable": {
            "type": "boolean"
        },
        "rasterizerDiscardEnable": {
            "type": "boolean"
        },
        "polygonMode": {
            "type": "integer",
            "description": "typedef enum VkPolygonMode {\nVK_POLYGON_MODE_FILL = 0,\nVK_POLYGON_MODE_LINE = 1,\nVK_POLYGON_MODE_POINT = 2,\nVK_POLYGON_MODE_FILL_RECTANGLE_NV = 1000153000,\n} VkPolygonMode;",
            "enum": [
                0,
                1,
                2,
                1000153000
            ]
        },
        "cullMode": {
            "type": "integer",
            "description": "typedef enum VkCullModeFlagBits {\nVK_CULL_MODE_NONE = 0,\n\nVK_CULL_MODE_FRONT_BIT = 0x00000001,\nVK_CULL_MODE_BACK_BIT = 0x00000002,\nVK_CULL_MODE_FRONT_AND_BACK = 0x00000003,\n} VkCullModeFlagBits;",
            "enum": [
                0,
                1,
                2,
                3
            ]
        },
        "frontFace": {
            "type": "integer",
            "description": "typedef enum VkFrontFace {\nVK_FRONT_FACE_COUNTER_CLOCKWISE = 0,\nVK_FRONT_FACE_CLOCKWISE = 1,\n} VkFrontFace;",
            "enum": [
                0,
                1
            ]
        },
        "depthBiasEnable": {
            "type": "boolean"
        },
        "depthBiasConstantFactor": {
            "type": "number"
        },
        "depthBiasClamp": {
            "type": "number"
        },
        "depthBiasSlopeFactor": {
            "type": "number"
        },
        "lineWidth": {
            "type": "number",
            "minimum": 0
        }
    },
    "required": [
        "uri",
        "depthClampEnable",
        "rasterizerDiscardEnable",
        "polygonMode",
        "cullMode",
        "frontFace",
        "depthBiasEnable",
        "depthBiasConstantFactor",
        "depthBiasClamp",
        "depthBiasSlopeFactor",
        "lineWidth"
    ]
}