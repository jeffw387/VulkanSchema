{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "id": "https://gitcdn.xyz/repo/jeffw387/VulkanSchema/master/schema/descriptorSetLayout.schema.json",
    "type": "object",
    "definitions": {
        "descriptorSetLayoutFlag": {
            "type": "string",
            "enum": [
                "VK_DESCRIPTOR_SET_LAYOUT_CREATE_PUSH_DESCRIPTOR_BIT_KHR"
            ]
        },
        "descriptorSetLayoutBinding": {
            "type": "object",
            "properties": {
                "uri": {
                    "$ref": "uri.schema.json"
                },
                "binding": {
                    "type": "integer",
                    "minimum": 0
                },
                "descriptorType": {
                    "type": "string",
                    "enum": [
                        "VK_DESCRIPTOR_TYPE_SAMPLER",
                        "VK_DESCRIPTOR_TYPE_COMBINED_IMAGE_SAMPLER",
                        "VK_DESCRIPTOR_TYPE_SAMPLED_IMAGE",
                        "VK_DESCRIPTOR_TYPE_STORAGE_IMAGE",
                        "VK_DESCRIPTOR_TYPE_UNIFORM_TEXEL_BUFFER",
                        "VK_DESCRIPTOR_TYPE_STORAGE_TEXEL_BUFFER",
                        "VK_DESCRIPTOR_TYPE_UNIFORM_BUFFER",
                        "VK_DESCRIPTOR_TYPE_STORAGE_BUFFER",
                        "VK_DESCRIPTOR_TYPE_UNIFORM_BUFFER_DYNAMIC",
                        "VK_DESCRIPTOR_TYPE_STORAGE_BUFFER_DYNAMIC",
                        "VK_DESCRIPTOR_TYPE_INPUT_ATTACHMENT"
                    ]
                },
                "descriptorCount": {
                    "type": "integer",
                    "minimum": 0
                },
                "shaderStages": {
                    "type": "array",
                    "items": {
                        "$ref": "shaderStage.schema.json"
                    }
                },
                "immutableSamplers": {
                    "type": "array",
                    "items": {
                        "$ref": "samplerConfig.schema.json"
                    }
                }
            }
        }
    },
    "properties": {
        "uri": {
            "$ref": "uri.schema.json"
        },
        "flags": {
            "type": "array",
            "items": {
                "$ref": "#/definitions/descriptorSetLayoutFlag"
            }
        },
        "bindings": {
            "type": "array",
            "items": {
                "$ref": "#definitions/descriptorSetLayoutBinding"
            }
        }
    }
}