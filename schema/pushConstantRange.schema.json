{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "id": "https://gitcdn.xyz/repo/jeffw387/VulkanSchema/master/schema/pushConstantRange.schema.json",
    "type": "object",
    "properties": {
        "uri": {
            "$ref": "uri.schema.json"
        },
        "shaderStages": {
            "type": "array",
            "items": {
                "$ref": "shaderStage.schema.json"
            }
        },
        "offset": {
            "type": "integer",
            "minimum": 0,
            "multipleOf": 4
        },
        "size": {
            "type": "integer",
            "minimum": 0,
            "multipleOf": 4
        }
    },
    "required": [
        "uri",
        "shaderStages",
        "offset",
        "size"
    ]
}